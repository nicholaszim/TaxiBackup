@using Model.DTO
@model Model.DTO.CarDTO

@{
	ViewBag.Title = "CarCreate";
}
@Styles.Render("~/Content/BootstrapCallout.css")
@Styles.Render("~/Content/bootstrap-datetimepicker.css")
<div>
	<form method="post">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">@Resources.Resource.AddNewCar</h3>
			</div>
			<div class="bs-callout bs-callout-primary">
				<h4>@Resources.Resource.CreateHeader1</h4>
				@Resources.Resource.CreateAttention1
			</div>
			<div class="bs-callout bs-callout-warning">
				<h4>@Resources.Resource.CreateHeader2</h4>
				@Resources.Resource.CreateAttention2
			</div>
			<div class="panel-footer">
				<input class="btn btn-warning" type="reset" value=@Resources.Resource.CarResetBtn style="margin: 0 auto; width:200px" />
			</div>
			<div>
				@Html.AntiForgeryToken()
				<table class="table table-hover">
					<tr>
						<td><label for="inputCarName" class="control-label">@Resources.Resource.CarName</label></td>
						<td>
							<input type="text" class="form-control input-lg" id="inputCarName" name="CarName" placeholder="@Resources.Resource.CarName">
						</td>
					</tr>
					<tr>
						<td><label for="inputCarNumber" class="control-label">@Resources.Resource.CarNumber</label></td>
						<td><input type="text" class="form-control input-lg" id="inputCarNumber" name="CarNumber" placeholder="@Resources.Resource.CarNumber"></td>
					</tr>
					<tr>
						<td><label for="inputCarOccupation" class="control-label">@Resources.Resource.CarOccupation</label></td>
						<td><input type="number" class="form-control input-lg" id="inputCarOccupation" name="CarOccupation" min="2" max="20" placeholder="@Resources.Resource.CarOccupation"></td>
					</tr>
					<tr>
						<td><label for="inputCarClass" class="control-label">@Resources.Resource.CarClass</label></td>
						<td>
							<select class="form-control input-lg" name="CarClass">
								@foreach (var carClass in EnumHelper.GetCarClasses())
								{
									<option value="@carClass.Key">@carClass.Value</option>
								}
							</select>
						</td>
					</tr>
					<tr>
						<td><label for="inputCarPetrolType" class="control-label">@Resources.Resource.CarPetrolType</label></td>
						<td>
							<select class="form-control input-lg" name="CarPetrolType">
								@foreach (var carPetrol in EnumHelper.GetCarPetrol())
								{
									<option value="@carPetrol.Key">@carPetrol.Value</option>
								}
							</select>
						</td>
					</tr>
					<tr>
						<td><label for="inputCarPetrolConsumption" class="control-label">@Resources.Resource.CarPetrolConsumption</label></td>
						<td><input type="number" class="form-control input-lg" id="inputCarPetrolConsumption" name="CarPetrolConsumption" min="1" max="100" placeholder="@Resources.Resource.CarPetrolConsumption"></td>
					</tr>
					<tr>
						<td><label for="inputCarManufactureDate" class="control-label">@Resources.Resource.CarManufactureDate</label></td>
						<td>
							<input type='text' class="form-control input-lg bootstrap-datetimepicker-widget" id='datetimepicker' name="CarManufactureDate" placeholder="@Resources.Resource.CarManufactureDate" />
							@*<input type="date" data-provide="datepicker" class="form-control input-lg" name="CarManufactureDate" placeholder="@Resources.Resource.CarManufactureDate">*@
						</td>
					</tr>
					<tr>
						<td><label for="inputCarState" class="control-label">@Resources.Resource.CarState</label></td>
						<td>
							<select class="form-control input-lg" name="CarState">
								@foreach (var carState in EnumHelper.GetCarStates())
								{
									<option value="@carState.Key">@carState.Value</option>
								}
							</select>
						</td>
					</tr>
				</table>
				@Html.Hidden("UserId", (Session["User"] as Model.DTO.UserDTO).Id != null ? (Session["User"] as Model.DTO.UserDTO).Id : -1)
			</div>
			<div class="panel-footer">
				<div class="btn-group" role="group" aria-label="...">
					<input class="btn btn-success" type="submit" value="@Resources.Resource.AddNewCar" style="margin: 0 auto; width:200px" />
					<input class="btn btn-primary" type="button" value=@Resources.Resource.CarToMenuBtn onclick="history.go(-1);return true;" style="margin: 0 auto; width:200px" />
				</div>
			</div>
		</div>
	</form>
</div>
@section scripts{
	<script src="~/Scripts/moment.js"></script>
	<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
	<script type="text/javascript">
		$(function () {
			$('#datetimepicker').datetimepicker({
				format: 'DD-MM-YYYY',
				toolbarPlacement: 'top'
			});
		});
	</script>
}







