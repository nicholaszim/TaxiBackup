@using System.Collections;
@using Model.DTO;
@model IList<Object>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SetVIPStatus</title>
</head>

<body>
    <div>

        <h1>@Resources.Resource.SetVIPStatusPage</h1>

        <table class="table">

            <tr>
                <th>
                    @Resources.Resource.UserName
                </th>
                <th>
                    @Resources.Resource.Setdate
                </th>
                <th>
                    @Resources.Resource.Action
                </th>
            </tr>

            @{
                List<VIPClientDTO> listlistVIPClients = (List<VIPClientDTO>)Model[0];

                foreach (VIPClientDTO VIP in listlistVIPClients)
                {
                    <tr>
                        <td>@VIP.UserName</td>
                        <td>@VIP.SetDate.ToString("dd:MM:yyyy")</td>
                        <td>@Html.ActionLink(Resources.Resource.deleteString, "DeleteVIPUser", new VIPClientDTO { Id = VIP.Id })</td>
                    </tr>
                }

            }
        </table>

        <style>
            select {
                width: 157px; 
            }
        </style>
        <div class="row">
            <form action="SetVIPStatusC" method="post">
                <div class="col-md-6">
                    
                    <select name="UserName" class="form-control">
                        @{
                            List<UserDTO> listNoVIPClients = (List<UserDTO>)Model[1];

                            foreach (UserDTO U in listNoVIPClients)
                            {
                                <option> @U.UserName </option>
                            }
                        }

                    </select>
                </div>
                <div class="col-md-6">
                    <input type="submit" value=@Resources.Resource.Set class="btn btn-default">
                </div>
            </form>
        </div>


    </div>
</body>
</html>


