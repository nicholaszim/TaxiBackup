@using Common.Enum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

        <div class="row">
            <div class="col-lg-2 col-lg-offset-1 col-md-3 col-sm-3 col-xs-12" >

            <div class="left-menu">
            <div class="navbar navbar-default">
               <div class="container">
                <div class="navbar-header">

                <ul class="nav navbar-nav" >
                    @if(Session["User"]==null)
                    { 
                    <li>
                        @Html.ActionLink("Log in", "Authentification","Account")
                    </li>
                    <li>
                        @Html.ActionLink("Sign Up", "Registration", "Account")
                    </li>
                    }
                    else
                    {
                       string q = ((Model.DTO.UserDTO)Session["User"]).UserName;

                        <li>
                            @Html.ActionLink(q,"","")
                        </li>
                        <li>
                            @Html.ActionLink("Log out", "LogOut", "Account")
                        </li>
                    }

                </ul>
                   </div>
               </div>
           </div>
                 @*Links menu by users role*@
                    <div class="list-group">                     
                        <ul class="nav">
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("Districts menu", "DistrictEditor", "Settings")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("UsersMenu", "UsersMenu", "Settings")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("AddUser", "AddUser", "Administration")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Client || ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("My Account", "Index", "User")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Driver || ViewBag.UserRoleId == (int)AvailableRoles.Administrator || ViewBag.UserRoleId == (int)AvailableRoles.Operator)
                            {
                            <li class="list-group-item">@Html.ActionLink("CarEditor", "CarEditor", "Settings")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Driver || ViewBag.UserRoleId == (int)AvailableRoles.Administrator || ViewBag.UserRoleId == (int)AvailableRoles.Operator)
                            {
                            <li class="list-group-item">@Html.ActionLink("[Personal]", "Index", "Driver")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Operator || ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("UserAddress", "Index", "Address")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Operator || ViewBag.UserRoleId == (int)AvailableRoles.Administrator)
                            {
                            <li class="list-group-item">@Html.ActionLink("SetVIPStatus", "SetVIPStatus", "Settings")</li>}
                            @if (ViewBag.UserRoleId == (int)AvailableRoles.Driver || ViewBag.UserRoleId == (int)AvailableRoles.Administrator || ViewBag.UserRoleId == (int)AvailableRoles.Operator)
                            {
                            <li class="list-group-item">@Html.ActionLink("Localization", "EditLocation", "Localization")</li>}

                        </ul>
                  </div>
                  </div>

    
            </div>

            <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12">
                    @RenderBody()
            </div>

        </div>


    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">

                  
                  <div class="lang"> 
                   <ul class="nav navbar-nav">
                       @Html.Partial("_Language")
                  </ul>
                </div>
                   
                 
                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>